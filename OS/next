#include<bits/stdc++.h>

using namespace std;
int main()
{
    string p[]={"p1","p2","p3","p4"};
    int a[]={0,2,6,4};
    int b[]={20,15,27,36};
    int res[10]={0};
    int ct[10]={0};
    int n=4;
    int wt[10]={0},tat[10]={0};
    wt[0]=0;
    res[0]=0;
    for(int i=1;i<n;i++)
    {
        res[i]=res[i-1]+b[i-1];
        res[i]-=a[i];
    }
    int tot_wt=0,tot_tat=0;
    for(int i=0;i<n;i++)
    {
        wt[i]=res[i];
        tot_wt+=wt[i];
    }
   
    for(int i=0;i<n;i++)
    {
        tat[i]=b[i]+wt[i];
        tot_tat+=tat[i];
        ct[i]=tat[i]+a[i];
    }
    
    for(int i=0;i<n;i++)
    {
        cout <<"burst time="<< b[i]<<"\t\twaiting time="<<wt[i]<<"\t\tturn around time="<<tat[i]<<endl;
    }
    float avg=(float)tot_wt/n,ans=0;
    cout<<"average waiting time= "<<avg<<endl;
    for(int i=0;i<n;i++)
    {
        float k=abs(wt[i]-avg);
        ans+=k*k;
        
    }
    ans/=n-1;
    ans=sqrt(ans);
      cout<<"standard deviation of waiting time= "<<ans;
    
    return 0;
}
